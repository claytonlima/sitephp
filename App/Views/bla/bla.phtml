<script src="/js/jquery-3.1.1.min.js" type="text/javascript"></script>

<script>
$.ajax({
    type: "delete",
    url: 'api/robots/1',
    dataType:"json",
    success: function (retorno) {
    	var id 		= retorno.data.id;
    	var name	= retorno.data.name;
    	var info	=   '<p>'+id+'</p>'
    				  + '<p>'+name+'</p>'
    	$('#info').html(info);
    },
    error: function (retorno) {
    	var errorRetorno = '<div>'
        						'<p>'+retorno.data.responseText+'</p>'
    					   '</div>';
		  $('#info').html(errorRetorno);
    }
});
</script>

<html>
<head>
    <title>Consultando api</title>
</head>
<body>

<div id="info">

</div>

</body>
</html>
